@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Share/Layout.cshtml";
}
@using QL_Tour.Models;
@model List<GioHang>
 <h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="card border-dark">

<table class="table">
    <tr style="background-color:lightyellow">
       <th>Mã Tour</th>
        <th>Tên Tour</th>
        <th>Ảnh bìa</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>Thành tiền</th>
        <th colspan="3"><a href=" @Url.Action("XoaTatcaGioHang", "GioHang")">Delete ALL</a></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td width="5%">@item.iMaSP</td>
        <td width="30%"> @item.sTenSP</td>
        <td width="30%"><img src="~/HinhAnhSP/@item.sAnhBia" width="50%" /></td>
        @using (Html.BeginForm("updateGioHang", "GioHang", new { maSP = item.iMaSP }))
        {
            <td width="5%"><input id="txt_SoLuong" type="number" min="1" name="txt_SoLuong" value="@item.iSoLuong" style="width:50px"/></td>
            <td width="12%">@string.Format("{0:0,0}", item.dGia)</td>
            <td width="18%">@string.Format("{0:0,0}", item.dThanhTien)</td>
             <td><a href=" @Url.Action("chiTietSP", "Product", new { maSP=item.iMaSP })" >Details</a></td>
             <td><a href=" @Url.Action("XoaGioHang", "GioHang", new { maSP=item.iMaSP })" >Delete</a></td>
            <td><input id="Submit1" type="submit" value="Update"  class="btn btn-primary"/></td>
        }
        
        
        
    </tr>
    }
    <tr style="background-color:lightyellow">
     
        <td colspan="2" style="color:blue; font-weight: bold; text-align:right;">Tổng cộng: </td>
        <td style="color:red; font-weight:bold">@ViewBag.TongSLuong</td>
        <td></td>
        <td colspan="2" style="color:red; font-weight:bold">@string.Format("{0:0,0}", ViewBag.TongTTien) VNĐ</td>
        <td colspan="2" ><a href="@Url.Action("SanPham","Product")" >
        <input type="submit" value="MUA TIẾP" class="btn btn-primary" /></a></td>
           <td><a href="@Url.Action( "DatHang", "GioHang")" >
        <input type="submit" value="THANH TOÁN" class="btn btn-primary" /></a></td>
    </tr>
</table>
</div>



